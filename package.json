{
  "name": "magicbook",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:frontend": "cd frontend && vite --host",
    "dev:backend": "cd backend && bun --hot server.ts --mode master --workers 3",
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "build": "cd frontend && vite build",
    "build:backend": "bun build backend/server.ts --outdir dist --target bun --minify",
    "build:executable": "bun build --compile backend/server.ts --outfile dist/magicbook",
    "build:all": "bun run build && bun run build:backend",
    "build:full": "bun run build && bun run backend/scripts/build-executable.ts --full",
    "build:single": "bun run backend/scripts/build-executable.ts --single",
    "start": "cd backend && bun server.ts --mode master --workers 4",
    "start:dist": "bun dist/server.js",
    "start:executable": "./dist/magicbook"
  },
  "dependencies": {
    "@arco-design/web-vue": "^2.57.0",
    "@cantoo/pdf-lib": "^2.4.2",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/lang-yaml": "^6.1.2",
    "@codemirror/language": "^6.11.3",
    "@codemirror/language-data": "^6.5.1",
    "@codemirror/legacy-modes": "^6.5.1",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.1",
    "@fastify/cors": "^10.0.0",
    "@fastify/http-proxy": "^11.3.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.0.0",
    "@iarna/toml": "^2.2.5",
    "@inquirer/prompts": "^7.8.3",
    "@trpc/client": "^11.4.4",
    "@trpc/server": "^11.4.4",
    "chalk": "^5.6.0",
    "codemirror": "^6.0.2",
    "confbox": "^0.2.2",
    "dexie": "^4.2.0",
    "dot-properties": "^1.1.0",
    "drizzle-orm": "^0.44.4",
    "elysia": "^1.3.13",
    "exceljs": "^4.4.0",
    "fast-xml-parser": "^5.2.5",
    "fastify": "^5.5.0",
    "file-saver": "^2.0.5",
    "hono": "^4.9.2",
    "inquirer": "^12.9.3",
    "json-editor-vue": "^0.18.1",
    "pdf-lib": "^1.17.1",
    "pdf2image": "^1.2.3",
    "pdfjs-dist": "^5.4.54",
    "properties-file": "^3.5.13",
    "superjson": "^2.2.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vanilla-jsoneditor": "^3.8.0",
    "vue": "^3.5.13",
    "vue-codemirror6": "^1.3.22",
    "vue-router": "^4.5.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.20",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^24.3.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "concurrently": "^8.0.0",
    "drizzle-kit": "^0.31.4",
    "postcss": "^8.5.3",
    "postcss-preset-env": "^10.1.5",
    "tailwindcss": "^4.1.1",
    "vite": "^6.3.4"
  }
}
